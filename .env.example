# =========================================================
# Discord configuration
# =========================================================
DISCORD_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=123456789012345678
# Optional: register commands in a development guild
DISCORD_GUILD_ID=123456789012345678
# Prefix for legacy message commands (defaults to ';')
COMMAND_PREFIX=;
# Category that will contain all middleman tickets
MIDDLEMAN_CATEGORY_ID=123456789012345678
ADMIN_ROLE_ID=123456789012345678
MIDDLEMAN_ROLE_ID=123456789012345678
# Channel where reviews will be published
REVIEW_CHANNEL_ID=123456789012345678

# =========================================================
# Database configuration
# =========================================================
# Either provide DATABASE_URL or fill every MYSQL_* variable below.
DATABASE_URL=
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=dedos
MYSQL_PASSWORD=changeme
MYSQL_DATABASE=dedos_shop
MYSQL_CONNECTION_LIMIT=10
# DATABASE_URL="postgresql://dedos:dedos@localhost:5432/dedos_shop?schema=public"
DB_AUTO_APPLY_SCHEMA=true
DB_ACCEPT_DATA_LOSS=false

# =========================================================
# Redis cache (optional for v1)
# =========================================================
REDIS_URL=redis://localhost:6379

# =========================================================
# Application runtime
# =========================================================
NODE_ENV=development # development | production | test
LOG_LEVEL=info       # debug | info | warn | error
ENABLE_CACHE=false   # true para habilitar cach√© redis
ENABLE_SHARDING=false

# =========================================================
# Monitoring (optional)
# =========================================================
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=
